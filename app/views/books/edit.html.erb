<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

<h1 class="d-flex align-items-center justify-content-center">Editing Book</h1>
<% if @book.errors.any? %>
<div class= "text-danger">

<h1><%= @book.errors.count %>error</h1>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</div>
<% end %>

<%= form_with model: @book,local: true do |f| %>
<h4 class="col-md-12">Title</h4>
<%=f.text_field :title, class:"col-md-12" %>
<h4 class="col-md-12">Opinion</h4>
<%=f.text_area :body, class:"col-md-12" %>
<p><%= f.submit "Update Book", class:"btn btn-success col-md-4" %></p>

<p class="d-flex align-items-center justify-content-center"><%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %></p>

<% end %>
</div>

<div class="col-md-3">
</div>

</div>
</div>