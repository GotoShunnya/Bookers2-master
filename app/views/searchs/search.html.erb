<% if @model == "user" %>
<h1>Users search for "<%= @value %>"</h1>
<table class= "table table-striped">
        <thead>
         <tr>
          <th>image</th>
          <th>name</th>
         </tr>
        </thead>
        <% @datas.each do |user| %>
        <thead>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, format:"jpeg", fallback:"no_image.jpg", size:"50x50" %></td>
            <td><%= user.name %></td>
            <td>フォロー数<%= user.follower.count %></td>
            <td>フォロワー数<%= user.followed.count %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        </thead>
        <% end %>
       </table>

  <% elsif @model == "book" %>
  <h1>Books search for "<%= @value %>"</h1>
<table class= "table table-striped">
        <thead>
         <tr>
          <th>title</th>
          <th>Opinion</th>
         </tr>
        </thead>
        <% @datas.each do |book| %>
        <thead>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, format:"jpeg", fallback:"no_image.jpg", size:"50x50" %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        </thead>
        <% end %>
       </table>
<% end %>