<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            
<h1 class="d-flex align-items-center justify-content-center">User info</h1>
<% if @user.errors.any? %>
<div class= "text-danger">
<h1><%= @user.errors.count %>error</h1>
<% @user.errors.full_messages.each do |message| %>
<ul type= "disc"><li><%= message %></li></ul>
<% end %>
</div>
<% end %>

<%= form_with model:@user, local: true do |f| %>

<h6 class="col-md-12"><label for="inputName">Name</label></h6>
<%= f.text_field:name, autofocus: true, class:"col-md-12", placeholder:"name" %>

<h6 class="col-md-12"><label for="inputImage">Image</label></h6>
<%= f.attachment_field :profile_image, class:"col-md-12", placeholder:"profile_image_id" %>

<h6 class="col-md-12"><label for="inputIntroduction">Introduction</label></h6>
<%= f.text_field :introduction, autofocus: true, class:"col-md-12",placeholder:"introduction" %>

<p><%= f.submit "Update User", class:"btn btn-secondary col-md-4" %></p>

<% end %>
</div>

<div class="col-md-3"></div>
</div>
</div>